        <!--class="org.apache.log4j.RollingFileAppender">-->
        <!--&lt;!&ndash; 设置File参数：日志输出文件名 &ndash;&gt;-->
        <!--<param name="File" value="D://6.log//xn2//error.log" />-->
        <!--&lt;!&ndash; 设置是否在重新启动服务时，在原有日志的基础添加新日志 &ndash;&gt;-->
