        <!--&lt;!&ndash; 设置文件备份 &ndash;&gt;-->
        <!--<param name="MaxBackupIndex" value="10000" />-->
        <!--&lt;!&ndash; 设置输出文件项目和格式 &ndash;&gt;-->
        <!--<layout class="org.apache.log4j.PatternLayout">-->
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p: %c{1}\:%L - %m%n" />-->
        <!--</layout>-->
        <!---->
        <!--&lt;!&ndash;限制输出级别&ndash;&gt;  -->
		<!--<filter class="org.apache.log4j.varia.LevelRangeFilter">  -->
		   <!--<param name="LevelMax" value="ERROR"/>  -->
		   <!--<param name="LevelMin" value="ERROR"/>  -->
		<!--</filter>-->
    <!--</appender>-->
	<appender name="filelog_error_appender"  class="org.apache.log4j.DailyRollingFileAppender">
		<!-- 设置File参数：日志输出文件名 -->
		<param name="File" value="D://6.log//processConsumer//error//error.log" />
		<param name="DatePattern" value="'uacd.'yyyy-MM-dd'.log'" />

		<!-- 设置输出文件项目和格式 -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p: %c{1}\:%L - %m%n" />
		</layout>

		<!--限制输出级别-->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="ERROR"/>
			<param name="LevelMin" value="ERROR"/>
		</filter>
	</appender>
	<!-- 错误信息输出路径~~~~~~~~~~~end~~~~~~~~~~~~~~~ -->
	
	<!-- 普通日志输出路径,每天一个日志 ~~~~~~~~~begin~~~~~~~~~~~~~ -->  
     <appender name="daily_Log" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="D://6.log//processConsumer//daily//daily.log" />
        <param name="DatePattern" value="'uacd.'yyyy-MM-dd'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p: %c{1}\:%L - %m%n" />     
        </layout>
        
        <!--限制输出级别-->  
		<filter class="org.apache.log4j.varia.LevelRangeFilter">  
		   <param name="LevelMax" value="WARN"/>  
		   <param name="LevelMin" value="INFO"/>  
		</filter>
    </appender>
    <!-- 普通日志输出路径,每天一个日志 ~~~~~~~~~end~~~~~~~~~~~~~~~ -->
    
	<root>
		<priority value="info"/>
		<appender-ref ref="filelog_error_appender"/>
		<appender-ref ref="daily_Log"/>
	</root>
</log4j:configuration>